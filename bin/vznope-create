#!/usr/bin/env perl

use strict;
use warnings;
use VZNope;

my ($ctid, $dist, $name, $ip) = @ARGV;

if ($ctid && $dist) {
    VZNope->create_container(
        id    => $ctid, 
        dist  => $dist, 
        name  => $name,
        ip    => $ip,
    );
} 
else {
    help();
}

sub help {
    print do{ local $/; <DATA> };
    exit;
}

__DATA__

# vzn create

Create a new container from specified image to target CTID

  usage:
    vzn create [CTID] [distname](@[version]) [hostname] ([ip-address])

