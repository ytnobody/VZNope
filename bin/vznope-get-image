#!/usr/bin/env perl

use strict;
use warnings;
use VZNope;

my ($target, $subtype) = @ARGV;

unless ($target) {
    print do{local $/; <DATA>};
    exit;
}

VZNope->get_image($target, $subtype);

__DATA__

# vzn get-image

Download and deploy a specified image.

usage:

  vzn get-image [image-name] ([subtype])

